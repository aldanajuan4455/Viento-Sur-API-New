{% endblock %}
    {% block body %}
        <div class="global-wrap">
            <header id="main-header">
                <div class="header-top">
                    <div class="container">
                        <div class="row">

                            <div class="col-md-3">
                                <a class="logo" href="{{ path('homepage')}}">
                                    <img src="{{ asset('bundles/vientosurappapp/images/vientosur-logo-color.png') }}" alt="Viento Sur" title="" />
                                </a>
                            </div>

                            <div class="col-md-9">
                                {{ render(controller('VientoSurAppAppBundle:Index:changeOption')) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="nav">
                        {#<ul class="slimmenu" id="slimmenu">#}
                            {#<li class="active"><a href="{{ path('homepage')}}"><i class="fa fa-building-o"></i> <span>HOTELES</span></a></li>#}
                            {#<li><a href="#">VUELOS</a></li>#}
                            {#<!--<li><a href="#">AUTOS</a></li>#}
                            {#<li><a href="#">PAQUETES</a></li>#}
                            {#<li><a href="#">COMPRA SEGURA</a></li>-->#}
                        {#</ul>#}
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="{{ path('homepage')}}" style="background: #008CD1; color:#FFFFFF;border: none;cursor: pointer;"><i class="fa fa-building-o"></i> <span >Hoteles</span></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </header>
            <!-- end header -->

            {% block content %}
            {% endblock %}

            <footer id="main-footer">

                <div class="container">
                    <div class="row row-wrap">

                        <div class="col-md-4">
                            <a class="logo" href="{{ path('homepage')}}">
                                <img src="{{ asset('bundles/vientosurappapp/images/vientosur-logo-invert.png') }}" alt="Viento Sur" title="" />
                            </a>
                            <p class="mb20">Reserva tu viaje a cualquier parte del <br> mundo, encontrando todas las ofertas en un solo lugar</p>
                            <ul class="list list-horizontal list-space">
                                <li>
                                    <a class="fa fa-facebook box-icon-md round animate-icon-bottom-to-top" href="https://www.facebook.com/vientosur.net/"></a>
                                </li>
                                <li>
                                    <a class="fa fa-twitter box-icon-md round animate-icon-bottom-to-top" href="https://twitter.com/vientosurnet"></a>
                                </li>
                                <li>
                                    <a class="fa fa-google-plus box-icon-md round animate-icon-bottom-to-top" href="https://plus.google.com/u/0/b/105288426610495873036/105288426610495873036/posts"></a>
                                </li>
                                <li>
                                    <a class="fa fa-linkedin box-icon-md round animate-icon-bottom-to-top" href="https://ar.linkedin.com/in/viento-sur-81b159a5"></a>
                                </li>
                                <li>
                                    <a class="fa fa-instagram box-icon-md round animate-icon-bottom-to-top" href="https://www.instagram.com/vientosurnet/"></a>
                                </li>
                                <li>
                                    <a class="fa fa-weibo box-icon-md round animate-icon-bottom-to-top" href="http://weibo.com/6035165052/profile?topnav=1&wvr=6&is_all=1"></a>
                                </li>
                            </ul>
                        </div>

                        <div class="col-md-4">
                            <!--<h4>Newsletter</h4>
                            <form>
                                <input type="text" class="form-control mb10" placeholder="ingresa tu e-mail">
                                <input type="submit" class="btn btn-primary" value="Suscribirse">
                            </form>-->
                        </div>

                        <div class="col-md-4">
                            <h4>¿Tenés consultas?</h4>
                            <p>Si querés enviarnos una consulta contactanos a través de nuestro formulario de contacto</p>
                            <!--<input type="submit" class="btn btn-primary" value="Contacto">-->
                            <a href="#" title="Consultar" class="btn btn-primary" data-path="{{ path('viento_sur_app_consult') }}" data-toggle="modal" data-target="#submitConsult" data-title="Consultar">Contacto</a>
                        </div>

                    </div>
                </div>
            </footer>
        </div>

        <div id="fb-root"></div>

        <div class="modal fade" id="submitConsult" role="dialog" aria-labelledby="submitConsultLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title"></h4>
                    </div>
                    <div class="modal-body">
                        <form class="form-horizontal" id="formConsult" role="form">
                            <!--<h4>¿ Está seguro de ejecutar la acción ?</h4></br>-->
                            <div class="form-group">
                                <!--<label for="nombre_apellido" class="col-sm-2 control-label">Nombre y Apellido</label>-->
                                <div class="col-sm-1"></div>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="nombre_apellido" id="fullnameField" placeholder="Nombre y Apellido"/>
                                    <!--<textarea class="form-control" id="observacion" rows="5" style="resize: none;" required ></textarea>-->
                                </div>
                            </div>
                            <div class="form-group">
                                <!--<label for="nombre_apellido" class="col-sm-2 control-label">Nombre y Apellido</label>-->
                                <div class="col-sm-1"></div>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="email" id="emailField" placeholder="Email"/>
                                    <!--<textarea class="form-control" id="observacion" rows="5" style="resize: none;" required ></textarea>-->
                                </div>
                            </div>
                            <div class="form-group">
                                <!--<label for="nombre_apellido" class="col-sm-2 control-label">Nombre y Apellido</label>-->
                                <div class="col-sm-1"></div>
                                <div class="col-sm-10">
                                    <!--<input type="text" class="form-control" name="email" placeholder="Email"/>-->
                                    <textarea class="form-control" id="messageField" rows="5" style="resize: none;" required placeholder="Consulta"></textarea>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-primary" data-dismiss="modal" id="confirmConsult">Enviar</button>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    <script src="{{ asset('bundles/vientosurappapp/js/modernizr.js')}}" type="text/javascript"></script>
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
