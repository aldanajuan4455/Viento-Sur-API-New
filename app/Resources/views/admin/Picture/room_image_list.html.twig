{% extends ':admin:base.html.twig' %}

{% block title %}{{ room.name }} - {{ 'admin.gallery_photo' | trans }}{% endblock %}

{% block top_content %}
    {% embed ':_partial:breadcrumb.html.twig' %}
        {% block breadcrumb %}{{ 'index.search.hotel.room' | trans }} - {{ room.name }}{% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
    {% set id = app.request.attributes.get('_route_params').id %}
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-align-justify"></i> {{ 'admin.photo_manager' | trans }}
                <a href="{{ path('room_list') }}" class="btn" style="float:right">{{ 'admin.back' | trans }}</a>
            </div>
            <div class="card-block">
                <form action="{{ path('room_picture_new', {id: id}) }}" class="dropzone">
                </form>
                <br>
                <div class="container">
                    <div class="row">
                        <div class="gallery col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <h1 class="gallery-title">{{ 'admin.gallery_photo' | trans }}</h1>
                        </div>
                        {#<div align="center">#}
                        {#<button class="btn btn-default filter-button" data-filter="all">All</button>#}
                        {#<button class="btn btn-default filter-button" data-filter="hdpe">HDPE Pipes</button>#}
                        {#<button class="btn btn-default filter-button" data-filter="sprinkle">Sprinkle Pipes</button>#}
                        {#<button class="btn btn-default filter-button" data-filter="spray">Spray Nozzle</button>#}
                        {#<button class="btn btn-default filter-button" data-filter="irrigation">Irrigation Pipes</button>#}
                        {#</div>#}
                        <br/>
                        {% for picture in entities %}
                            <div class="gallery_product col-lg-3 col-md-3 col-sm-3 col-xs-6 filter hdpe">
                                <a href="#" class="open-modal">
                                    <img src="{{ asset('uploads/gallery_image/') }}{{ picture.imageName }}" class="img-responsive">
                                </a>
                                <div class="row">
                                    <a href="{{ path('room_picture_delete', {room: picture.room.id, picture: picture.id}) }}" class="btn btn-danger">eliminar</a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block extra_css %}
    <link rel="stylesheet" href="https://rawgit.com/enyo/dropzone/master/dist/dropzone.css">
    <style>
        .img-responsive{
            width: 200px;
            height: 200px;
        }
        .gallery-title
        {
            font-size: 36px;
            color: #42B32F;
            text-align: center;
            font-weight: 500;
            margin-bottom: 70px;
        }
        .gallery-title:after {
            content: "";
            position: absolute;
            width: 7.5%;
            left: 46.5%;
            height: 45px;
            border-bottom: 1px solid #5e5e5e;
        }
        .filter-button
        {
            font-size: 18px;
            border: 1px solid #42B32F;
            border-radius: 5px;
            text-align: center;
            color: #42B32F;
            margin-bottom: 30px;

        }
        .filter-button:hover
        {
            font-size: 18px;
            border: 1px solid #42B32F;
            border-radius: 5px;
            text-align: center;
            color: #ffffff;
            background-color: #42B32F;

        }
        .btn-default:active .filter-button:active
        {
            background-color: #42B32F;
            color: white;
        }
        .port-image
        {
            width: 100%;
        }
        .gallery_product
        {
            margin-bottom: 30px;
        }
    </style>
{% endblock %}
{% block extra_js %}
    <script src="https://rawgit.com/enyo/dropzone/master/dist/dropzone.js"></script>
    <script>
        $(function() {
            $('.open-modal').on('click', function() {
                $('.imagepreview').attr('src', $(this).find('img').attr('src'));
                $('#imagemodal').modal('show');
            });
        });
        $(document).ready(function(){
            $(".filter-button").click(function(){
                var value = $(this).attr('data-filter');

                if(value == "all")
                {
                    $('.filter').show('1000');
                }
                else
                {
                    $(".filter").not('.'+value).hide('3000');
                    $('.filter').filter('.'+value).show('3000');
                }
            });

            if ($(".filter-button").removeClass("active")) {
                $(this).removeClass("active");
            }
            $(this).addClass("active");

        });
    </script>
{% endblock %}