{% extends ':admin:base.html.twig' %}

{% block title %}Agergar Actividad{% endblock %}

{% block top_content %}
    {% embed ':_partial:breadcrumb.html.twig' %}
        {% block breadcrumb %}Agergar Actividad{% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-align-justify"></i> Agergar Actividad
            </div>
            <div class="card-block">
                <div class="stepwizard">
                    <div class="stepwizard-row setup-panel">
                        <div class="stepwizard-step">
                            <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
                            <p>Titulo y Destino</p>
                        </div>
                        <div class="stepwizard-step">
                            <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
                            <p>Descripción</p>
                        </div>
                        <div class="stepwizard-step">
                            <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
                            <p>Opciones</p>
                        </div>
                        <div class="stepwizard-step">
                            <a href="#step-4" type="button" class="btn btn-default btn-circle" disabled="disabled">4</a>
                            <p>Informacion general</p>
                        </div>
                    </div>
                </div>
                {{ form_start(form, {'attr':{ 'id': 'form', 'role': 'form'}}) }}
                    <div class="row setup-content" id="step-1">
                        <div class="col-xs-12">
                            <div class="col-md-12">
                                <h3> Titulo y Destino</h3>
                                <div class="form-group">
                                    <label class="control-label">Titulo</label>
                                </div>
                                <div class="form-group">
                                    <img class="flags-lg" src="{{ asset('assets/img/flags/Argentina.png') }}" alt="Español" style="margin-top: -7px">
                                    {{ form_widget(form.name, { 'attr': { 'class': 'form-control', 'placeholder': 'Ingrese el nombre de la actividad', 'style': 'width: 50%; float: left;', 'required': 'required' }}) }}<br/><br/>
                                    <img class="flags-lg" src="{{ asset('assets/img/flags/Portugal.png') }}" alt="Português" style="margin-top: -7px">
                                    {{ form_widget(form.namePt, translations.pt is not defined ? { 'attr': { 'class': 'form-control', 'placeholder': 'Digite o nome da atividade', 'style': 'width: 50%; float: left;', 'required': 'required' }} : { 'attr': { 'class': 'form-control', 'value': translations.pt.name, 'style': 'width: 50%; float: left;', 'required': 'required'  }} ) }}<br/><br/>                                    
                                    <img class="flags-lg" src="{{ asset('assets/img/flags/USA.png') }}" alt="English" style="margin-top: -7px">
                                    {{ form_widget(form.nameEn, translations.en is not defined ? { 'attr': { 'class': 'form-control', 'placeholder': 'Enter activity name', 'style': 'width: 50%; float: left;', 'required': 'required' }} : { 'attr': { 'class': 'form-control', 'value': translations.en.name, 'style': 'width: 50%; float: left;', 'required': 'required'  }} ) }}<br/><br/>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">{{ 'hotels.address' | trans }}*</label>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-9">
                                        {{ form_widget(form.address, { 'attr': { 'class': 'form-control controls', 'placeholder': 'Escribe la Dirección.', 'style': 'z-index: 100; position: absolute; left: 119px; top: 0px;', 'required': 'required', 'autocomplete': 'off' }}) }}
                                        {{ form_widget(form.latitude) }}
                                        {{ form_widget(form.longitude) }}
                                    </div>
                                </div>  
                                <div class="form-group row" style="margin-bottom: 0rem;">
                                    <div class="col-md-12">
                                        <div id="map-canvas"></div>
                                    </div>
                                </div>    
                                <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Next</button>
                            </div>
                        </div>
                    </div>
                    <div class="row setup-content" id="step-2">
                        <div class="col-xs-12">
                            <div class="col-md-12">
                                <h3>Descripción</h3>
                                <div class="form-group">
                                    <img class="flags-lg" src="{{ asset('assets/img/flags/Argentina.png') }}" alt="Español" style="margin-top: -7px">
                                    {{ form_widget(form.description, { 'attr': { 'class': 'form-control'}}) }}
                                </div>
                                <div class="form-group">
                                    <img class="flags-lg" src="{{ asset('assets/img/flags/Portugal.png') }}" alt="Português" style="margin-top: -7px">
                                    {{ form_widget(form.descriptionPt, translations.pt is not defined ? { 'attr': { 'class': 'form-control'}} : { 'attr': { 'class': 'form-control'}, 'value': translations.pt.description } ) }}                                  
                                </div>
                                <div class="form-group">
                                    <img class="flags-lg" src="{{ asset('assets/img/flags/USA.png') }}" alt="English" style="margin-top: -7px">
                                    {{ form_widget(form.descriptionEn, translations.en is not defined ? { 'attr': { 'class': 'form-control'}} : { 'attr': { 'class': 'form-control'}, 'value': translations.en.description } ) }}                                  
                                </div>    
                                <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Next</button>
                            </div>
                        </div>
                    </div>
                    <div class="row setup-content" id="step-3">
                        <div class="col-xs-12">
                            <div class="col-md-12">
                                <h3>Opciones</h3>
                                
