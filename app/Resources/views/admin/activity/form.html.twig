                                    <div class="row">
                                        <div class="col-md-3">
                                            <label class="control-label">Precio</label></br>
                                            {{ form_widget(form.price, { 'attr': { 'class': 'form-control'}}) }}
                                        </div>
                                        <div class="col-md-3">
                                            <label class="control-label">Capacidad por turno</label><br/>
                                            {{ form_widget(form.capacity_for_shift, {'attr': {'style': 'height: 40px; margin-top: -3px;'}}) }}
                                            (Personas)
                                        </div>
                                        <div class="col-md-3">
                                            <label class="control-label">Duración por turno</label><br/>
                                            {{ form_widget(form.duration, {'attr': {'style': 'height: 40px; margin-top: -3px;'}}) }}
                                            (Horas)
                                        </div>
                                        <div class="col-md-3">
                                            <label class="control-label">Habilitado</label><br/>
                                            {{ form_widget(form.availability, { 'attr': { 'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                  <fieldset class="fieldset-custom" style="margin: 0px;">
                                    <label class="label-fieldset" style="left: 45px;">Dias Habilitado</label>  
                                    <div class="col-md-1">
                                        <label class="control-label">Domingo</label><br/>
                                        {{ form_widget(form.sunday, { 'attr': { 'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-md-1">
                                        <label class="control-label">Lunes</label><br/>
                                        {{ form_widget(form.monday, { 'attr': { 'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-md-1">
                                        <label class="control-label">Martes</label><br/>
                                        {{ form_widget(form.tuesday, { 'attr': { 'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-md-1">
                                        <label class="control-label">Miercoles</label><br/>
                                        {{ form_widget(form.wednesday, { 'attr': { 'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-md-1">
                                        <label class="control-label">Jueves</label><br/>
                                        {{ form_widget(form.thursday, { 'attr': { 'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-md-1">
                                        <label class="control-label">Viernes</label><br/>
                                        {{ form_widget(form.friday, { 'attr': { 'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-md-1">
                                        <label class="control-label">Sabado</label><br/>
                                        {{ form_widget(form.saturday, { 'attr': { 'class': 'form-control'}}) }}
                                    </div>
                                    <div style="margin-bottom: 65px;"></div>
                                  </fieldset>  
                                </div>    
                                
                                <div class="form-group">
                                    <fieldset class="fieldset-custom" style="margin: 0px;">
                                        <label class="label-fieldset" style="left: 45px;">AM</label>
                                        <div class="col-md-3">
                                            <label class="control-label">PICK UP</label><br/>
                                            {{ form_widget(form.pick_up_am) }}
                                            (Horas)
                                        </div>
                                        <div class="col-md-3">
                                            <label class="control-label">Desde las</label><br/>
                                            {{ form_widget(form.from_am) }}
                                            (Horas)
                                        </div>
                                        <div class="col-md-3">
                                            <label class="control-label">Hasta las</label><br/>
                                            {{ form_widget(form.to_am) }}
                                            (Horas)
                                        </div>
                                        <div class="col-md-3">
                                            <label class="control-label">Habilitado</label><br/>
                                            {{ form_widget(form.am, { 'attr': { 'class': 'form-control'}}) }}
                                        </div>    
                                    </fieldset>
                                </div>
                                <div class="form-group">
                                    <fieldset class="fieldset-custom" style="margin: 0px;">
                                        <label class="label-fieldset" style="left: 45px;">PM</label>
                                        <div class="col-md-3">
                                            <label class="control-label">PICK UP</label><br/>
                                            {{ form_widget(form.pick_up_pm) }}
                                            (Horas)
                                        </div>
                                        <div class="col-md-3">
                                            <label class="control-label">Desde las</label><br/>
                                            {{ form_widget(form.from_pm) }}
                                            (Horas)
                                        </div>
                                        <div class="col-md-3">
                                            <label class="control-label">Hasta las</label><br/>
                                            {{ form_widget(form.to_pm) }}
                                            (Horas)
                                        </div>
                                        <div class="col-md-3">
                                            <label class="control-label">Habilitado</label><br/>
                                            {{ form_widget(form.pm, { 'attr': { 'class': 'form-control'}}) }}
                                        </div>    
                                    </fieldset>
                                </div>
                                <div class="form-group">
                                    <fieldset class="fieldset-custom" style="margin: 0px;">
                                        <label class="label-fieldset" style="left: 45px;">Todo el Dia</label>
                                        <div class="col-md-3">
                                            <label class="control-label">PICK UP</label><br/>
                                            {{ form_widget(form.pick_up_all) }}
                                            (Horas)
                                        </div>
                                        <div class="col-md-3">
                                            <label class="control-label">Desde las</label><br/>
                                            {{ form_widget(form.from_all) }}
                                            (Horas)
                                        </div>
                                        <div class="col-md-3">
                                            <label class="control-label">Hasta las</label><br/>
                                            {{ form_widget(form.to_all) }}
                                            (Horas)
                                        </div>
                                        <div class="col-md-3">
                                            <label class="control-label">Habilitado</label><br/>
                                            {{ form_widget(form.all_day, { 'attr': { 'class': 'form-control'}}) }}
                                        </div>    
                                    </fieldset>
                                </div>
                                <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Next</button>
                            </div>
                        </div>
                    </div>                
                    <div class="row setup-content" id="step-4">
                        <div class="col-xs-12">
                            <div class="col-md-12">
                                <h3>Informacion general</h3>
                                <fieldset class="fieldset-custom" style="margin: 0px;">
                                        <label class="label-fieldset" style="left: 45px;">Seleccionar</label>
                                        <div class="form-group">
                                            <label class="control-label">Agencia</label><br/>
                                           {{ form_widget(form.activity_agency, {'attr': {'style': 'height: 40px; width: 250px;'}}) }}   
                                        </div>
                                        <div class="form-group">
                                           {{ form_widget(form.general_information, { 'attr': { 'class': 'form-control selectpicker' }}) }}   
                                        </div>
                                </fieldset> 
                                {{ form_rest(form) }}     
                                <button id="send" type="submit" class="btn btn-success btn-lg pull-right"><i class="fa fa-dot-circle-o"></i> {{ 'admin.send' | trans }}</button>
                            </div>
                        </div>
                    </div>
                {{ form_end(form)}}
            </div>    
        </div>
    </div>
{% endblock %}

