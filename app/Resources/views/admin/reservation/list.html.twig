{% extends ':admin:base.html.twig' %}

{% block title %}{{ 'index.reservations' | trans }}{% endblock %}

{% block top_content %}
    {% embed ':_partial:breadcrumb.html.twig' %}
        {% block breadcrumb %}{{ 'index.reservations' | trans }}{% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-align-justify"></i> {{ 'admin.reservation_manager' | trans }}
            </div>
            <div class="card-block">
                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>{{ 'admin.period' | trans }}</th>
                        <th>{{ 'index.hotel' | trans }}</th>
                        <th>{{ 'hotels.reservation_number' | trans }}</th>
                        <th>{{ 'hotels.total_price' | trans }}</th>
                        <th>{{ 'hotels.card' | trans }}</th>
                        <th>{{ 'hotels.holder_name' | trans }}</th>
                        <th>{{ 'hotels.phone' | trans }}</th>
                        <th>{{ 'admin.email' | trans }}</th>
                        <th>{{ 'hotels.labels.comment' | trans }}</th>
                        <th>{{ 'admin.actions' | trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {%  for entity in entities %}
                        <tr>
                            <td>{{ entity.id }}</td>
                            <td>{{ entity.created | ago }}</td>
                            <td>
                                {% if entity.hotelId %}
                                    {{ entity.hotelId }}
                                {% endif %}
                            </td>
                            <td>{{ entity.reservationId }}</td>
                            <td>
                                {{ entity.totalPrice }}
                            </td>
                            <td>{{ entity.cardType }}</td>
                            <td>{{ entity.holderName }}</td>
                            <td>{{ entity.phoneNumber }}</td>
                            <td>{{ entity.email }}</td>
                            <td>{{ entity.comments }}</td>
                            <td>
                                {#<a data-target="#delete-modal" data-toggle="modal" data-whatever="{{ path('room_delete', {id: entity.id}) }}"><i class="fa fa-trash"></i></a>#}
                                {#<a href="{{ path('room_edit', {id: entity.id}) }}"><i class="fa fa-pencil"></i></a>#}
                                {#<a href="#"><i class="fa fa-picture-o"></i></a>#}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}