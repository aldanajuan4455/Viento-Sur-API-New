{% extends ':admin:base.html.twig' %}

{% block title %}{{ 'hotels.beds' | trans }}{% endblock %}

{% block top_content %}
    {% embed ':_partial:breadcrumb.html.twig' %}
        {% block breadcrumb %}{{ 'hotels.beds' | trans }}{% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-align-justify"></i> {{ 'admin.bed_manager' | trans }}
            </div>
            <div class="card-block">
                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>{{ 'admin.period' | trans }}</th>
                        <th>{{ 'index.search.hotel.room' | trans }}</th>
                        <th>{{ 'admin.name' | trans }}</th>
                        <th>{{ 'hotels.bed_type' | trans }}</th>
                        <th>{{ 'hotels.size' | trans }}</th>
                        <th>{{ 'hotels.quantity' | trans }}</th>
                        <th>{{ 'admin.created_by' | trans }}</th>
                        <th>{{ 'admin.actions' | trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {%  for entity in entities %}
                        <tr>
                            <td>{{ entity.id }}</td>
                            <td>{{ entity.created | ago }}</td>
                            <td>
                                {% if entity.room %}
                                    {{ entity.room.name }}
                                {% endif %}
                            </td>
                            <td>{{ entity.name }}
                            </td>
                            <td>
                                {% if entity.bedType %}
                                    {{ entity.bedType.name }}
                                {% endif %}
                            </td>
                            <td>
                                {% if entity.bedType %}
                                    {{ entity.bedType.size }}
                                {% endif %}
                            </td>
                            <td>{{ entity.quantity }}</td>
                            <td>
                                {% if entity.createdBy %}
                                    {{ entity.createdBy.username }}
                                {% endif %}
                            </td>
                            <td>
                                <a data-target="#delete-modal" data-toggle="modal" data-whatever="{{ path('bed_delete', {id: entity.id}) }}"><i class="fa fa-trash"></i></a>
                                <a href="{{ path('bed_edit', {id: entity.id}) }}"><i class="fa fa-pencil"></i></a>
                                {#<a href="#"><i class="fa fa-picture-o"></i></a>#}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}