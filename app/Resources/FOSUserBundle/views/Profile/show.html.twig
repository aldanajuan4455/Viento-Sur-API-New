{% extends ":admin:base.html.twig" %}

{% block title %}{{ 'admin.profile' | trans }}{% endblock %}

{% block top_content %}
    {% embed ':_partial:breadcrumb.html.twig' %}
        {% block breadcrumb %}{{ 'admin.profile' | trans }}{% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
    <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
        <div class="well profile">
            <div class="col-sm-12">
                <div class="col-xs-12 col-sm-8">
                    <p><strong>{{ 'admin.email' | trans }}: </strong> {{ user.email }}</p>
                    <p><strong>{{ 'admin.username' | trans }}: </strong> {{ user.username }}</p>
                </div>
            </div>
            <div class="col-sm-12">
                <a class="btn btn-primary" href="{{ path('user_edit',{id: user.id}) }}">{{ 'admin.edit_profile' | trans }}</a>
                <a class="btn btn-warning" href="{{ path('fos_user_change_password',{id: user.id}) }}">{{ 'admin.edit_password' | trans }}</a>
            </div>
        </div>
    </div>
{% endblock %}