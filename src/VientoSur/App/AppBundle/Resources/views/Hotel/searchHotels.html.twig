<h2>Busca tu hotel</h2>

{% block javascripts %}

    <script type="text/javascript">
        jQuery(document).ready(function() {
            var url = Routing.generate('hotel_autocomplete');
            $('#autocomplete').autocomplete({
                serviceUrl: url,
                onSelect: function (suggestion) {
                    $("#destinationCity").val(suggestion.data);
                }
            });
        });
    </script>
{% endblock %}



<form name="searchHotel" id="search-hotels" action ="{{ path('viento_sur_send_hotels')}}" method="POST">
    <div class="row">

        <div class="col-md-4">
            <div class="form-group form-group-lg form-group-icon-left"><i class="fa fa-map-marker input-icon"></i>
                <label>¿A dónde?</label>
                <!--<input class="typeahead form-control" placeholder="Destino, Código Postal" type="text" />-->
                <input id="autocomplete" name="autocomplete" type="text" class="typeahead city-input form-control" data-provide="typeahead" placeholder="Destino, Código Postal">
                <input id="destinationCity" name="cityInput" type="hidden">
            </div>
        </div>

        <div class="col-md-8">
            <div class="input-daterange" data-date-format="d M, D">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group form-group-lg form-group-icon-left"><i class="fa fa-calendar input-icon input-icon-highlight"></i>
                            <label>Fecha de Entrada</label>
                            <input id="field-hotel-checkin" class="form-control required" name="start" type="text" required="" placeholder="dd/mm/yyyy" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group form-group-lg form-group-icon-left"><i class="fa fa-calendar input-icon input-icon-highlight"></i>
                            <label>Fecha de Salida</label>
                            <input id="field-hotel-checkout required" class="form-control" name="end" type="text" required="" placeholder="dd/mm/yyyy" />
                        </div>
                    </div>

                </div>
            </div>
        </div>


        <div class="col-md-4">
            <div class="form-group form-group-lg form-group-select-plus">
                <label>Habitaciones</label>
                <div class="btn-group btn-group-select-num" data-toggle="buttons">
                    <label class="btn btn-primary active">
                        <input type="radio" name="habitacionesCant" />1</label>
                    <label class="btn btn-primary">
                        <input type="radio" name="habitacionesCant" />2</label>
                    <label class="btn btn-primary">
                        <input type="radio" name="habitacionesCant" />3</label>
                    <label class="btn btn-primary">
                        <input type="radio" name="habitacionesCant" />3+</label>
                </div>
                <select class="form-control hidden" name="habitacionesCant">
                    <option>1</option>
