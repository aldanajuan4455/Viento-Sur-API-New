                <option value=2>2</option>
                <option value=3>3</option>
                <option value=4>4</option>
                <option value=5>5</option>
                <option value=6>6</option>
                <option value=7>7</option>
                <option value=8>8</option>
            </select>
        </div>
        <div class="passengers-container">
            <label id="childrenSelectLabel" for="childrenSelect">Menores</label>       
            <select class="selectNum" id="childrenSelect" name="childrenSelect" onChange="mostrarInputsChildren(false)"><br />
                <option value=0>0</option>
                <option value=1>1</option>
                <option value=2>2</option>
                <option value=3>3</option>
                <option value=4>4</option>
                <option value=5>5</option>
                <option value=6>6</option>
                <option value=7>7</option>
            </select>
        </div>

        <div class="passengers-container">
            <label id="childrenSelectLabel" for="infantsSelect">infantes</label>       
            <select class="selectNum" id="infantsSelect" name="infantsSelect" onChange="mostrarInputsChildren(false)"><br />
                <option value=0>0</option>
                <option value=1>1</option>
                <option value=2>2</option>
                <option value=3>3</option>
                <option value=4>4</option>
                <option value=5>5</option>
                <option value=6>6</option>
                <option value=7>7</option>
            </select>
        </div>  	

        <!-- advancedOptions.ftl -->
    </div>
    <div class="mod-searchbutton">
        <button type="submit">Buscar</button>
        {#<a class="buttonContainer">
                <span onclick="submitSearchForm()">Buscar</span>
        </a>#}
    </div>		
</form>

<script>
    jQuery(document).ready(function () {

        $("#oneWayTripType").click(function () {
            if ($("#oneWayTripType").is(':checked')) {
                $("#toDateInputContainer").hide();
            } else {
                $("#toDateInputContainer").show();
            }

        });

       var url = Routing.generate('vuelo_autocomplete');
        $('#autocomplete-origen').autocomplete({
            serviceUrl: url,
            onSelect: function (suggestion) {
                $("#origen-city").val(suggestion.data);
            }
        });
        
        $('#autocomplete-destino').autocomplete({
            serviceUrl: url,
            onSelect: function (suggestion) {
                $("#destino-city").val(suggestion.data);
            }
        });
        $('#fromCalendarVuelo').datepicker();
        $('#toCalendarVuelo').datepicker();



    });
    var cal;

    function closeToVuelo(event)
    {
        $("#toCalendarVuelo").datepicker("hide");
    }
    function closeFromVuelo(event)
    {
        $("#fromCalendarVuelo").datepicker("hide");
    }
</script>