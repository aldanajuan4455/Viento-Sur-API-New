                </li>#}
    </ul>

    <div class="contenedorCiudades" id="contenedorCiudades">


        <div id="originContainer" class="city-container">	<!--Origin city input-->
            <label id="origenLabel" for="origen">Origen</label>
            <input id="autocomplete-origen" name="origin" type="text" class="city-input required" data-provide="typeahead" placeholder="Ingrese una ciudad de Origen" 
                   value=""/>
            <input type="hidden" id="origen-city" style="display:none" name="origen-city" class="required" value=""/>
        </div>
        <div id="destinationContainer" class="city-container">	<!--Destination city input-->
            <label id="destinoLabel" for="destino">Destino</label>
            <input id="autocomplete-destino" name= "destination" type="text" class="city-input required" data-provide="typeahead" placeholder="Ingrese una ciudad de Destino" 
                   value=""/>
            <input type="hidden" id ="destino-city" style="display:none" name="destino-city" class="required" value="">
        </div>
        <div class="clearBox"></div>		 	
    </div>

    <div class="flightDates-container" id="contenedorFechas">
        <!-- dateCalendar.ftl -->

        <input id="flightsMinDays" type="hidden" class="ignore" value="1" />

        <div class="date-container" id="fromDateInputContainer">	<!--Departure date input-->
            <label id="fromDateLabel" for="fromCalendar">Partida</label><br />
            <input type="text" data-date="" data-date-format="yyyy-mm-dd"  class="input-date required datepicker" id="fromCalendarVuelo" name="fromCalendarVuelo" onFocus="closeToVuelo(this);">
            {#            <input type="text" placeholder="dd-mm-aaaa" class="input-date required" id="fromCalendar" name="fromDate" >#}

            <span class="mainSprite calendar"></span>
        </div>
        <p class="date-separator">&nbsp;</p>
        <div class="date-container" id="toDateInputContainer">	<!--Arrival date input-->
            <label id="toDateLabel" for="toCalendar">Regreso</label><br />
            <input type="text" data-date="" data-date-format="yyyy-mm-dd"  class="input-date required datepicker" id="toCalendarVuelo" name="toCalendarVuelo" onFocus="closeToVuelo(this);">
            {#            <input type="text" placeholder="dd-mm-aaaa" class="input-date required" id="toCalendar" name="toDate">#}

            <span class="mainSprite calendar"></span>
        </div>
        <div class="clearBox"></div>		 	
    </div>
    <div id="passengers">
        <!-- passengers.ftl -->
        <div class="passengers-container">
            <label id="adultSelectLabel" for="adultsSelect">Adultos</label>
            <select class="selectNum" id="adultsSelect" name="adultsSelect">
