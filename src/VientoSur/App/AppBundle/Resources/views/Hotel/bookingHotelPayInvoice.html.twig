{% if formChoice.payment.invoice.billing_address is defined %}
    <hr/>
    <h3>Dirección de Facturación:</h3>
    <div class="row">
        {% if formNewPay.payment.billing_addresscountry is defined %}
            {% set label = 'hotels.labels.country' | trans %}
            <div class="col-md-3">
                {{ form_row(formNewPay.payment.billing_addresscountry , {'label': label, 'attr': {'class': 'form-control'}}) }}
            </div>
        {% endif %}

        {% if formNewPay.payment.billing_addressstreet is defined %}
            {% set label = 'hotels.labels.street' | trans %}
            <div class="col-md-3">
                {{ form_row(formNewPay.payment.billing_addressstreet , {'label': label, 'attr': {'class': 'form-control'}}) }}
            </div>
        {% endif %}

        {% if formNewPay.payment.billing_addressnumber is defined %}
            {% set label = 'hotels.labels.billing_addressnumber' | trans %}
            <div class="col-md-3">
                {{ form_row(formNewPay.payment.billing_addressnumber , {'label': label, 'attr': {'class': 'form-control'}}) }}
            </div>
        {% endif %}

        {% if formNewPay.payment.billing_addressfloor is defined %}
            {% set label = 'hotels.labels.floor' | trans %}
            <div class="col-md-3">
                {{ form_row(formNewPay.payment.billing_addressfloor , {'label': label, 'attr': {'class': 'form-control'}}) }}
            </div>
        {% endif %}
    </div>

    <div class="row">
        {% if formNewPay.payment.billing_addressdepartment is defined %}
            {% set label = 'hotels.labels.department' | trans %}
            <div class="col-md-3">
                {{ form_row(formNewPay.payment.billing_addressdepartment , {'label': label, 'attr': {'class': 'form-control'}}) }}
            </div>
        {% endif %}

        {% if formNewPay.payment.billing_addressstate_id is defined %}
            <div class="col-md-3">
                {% set label = 'hotels.labels.state' | trans %}
                {{ form_label(formNewPay.payment.billing_addressstate_id, label) }}
                {% set label = 'hotels.labels.find_state' | trans %}
                <input type="text" id="autocomplete-state" data-provide="typeahead" placeholder="{{ label }}" required autocomplete="off" class="form-control" />
                {{ form_widget(formNewPay.payment.billing_addressstate_id , {'attr': {'class': 'hide'}}) }}
                {{ form_errors(formNewPay.payment.billing_addressstate_id) }}
            </div>
        {% endif %}

        {% if formNewPay.payment.billing_addresscity_id is defined %}
            <div class="col-md-3">
                {% set label = 'hotels.labels.city' | trans %}
                {{ form_label(formNewPay.payment.billing_addresscity_id, label) }}
                {% set label = 'hotels.labels.fill_state' | trans %}
                <input type="text" id="autocomplete-city" data-provide="typeahead" placeholder="{{ label }}" readonly required autocomplete="off" class="form-control" />
                {{ form_widget(formNewPay.payment.billing_addresscity_id , {'attr': {'class' : 'hide'}}) }}
                {{ form_errors(formNewPay.payment.billing_addresscity_id) }}
            </div>
        {% endif %}

        {% if formNewPay.payment.billing_addresspostal_code is defined %}
            {% set label = 'hotels.labels.postal_code' | trans %}
            <div class="col-md-3">
                {{ form_row(formNewPay.payment.billing_addresspostal_code , {'label': label, 'attr': {'class': 'form-control'}}) }}
            </div>
        {% endif %}
    </div>
{% endif %}