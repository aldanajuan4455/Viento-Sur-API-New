{% if items.message is defined %}
    <li>{{ 'hotels.not_found' | trans }}</li>
{% elseif items.items|length > 0 %}
    {% for item in items.items %}
        <li>
            <span class="booking-item cursor-pointer" data-href="{{ path('viento_sur_app_app_homepage_show_hotel_id',{'_locale': app.request.locale, 'idHotel': item.id, 'checkin_date': reservation.checkin_date, 'checkout_date': reservation.checkout_date, 'distribution': reservation.distribution, 'latitude': item.hotel.location.latitude, 'longitude':item.hotel.location.longitude})}}">
                <div class="row">
                    <div class="col-md-4">
                        <div class="booking-item-img-wrap">
                            <div>
                                <img src="{{ hotelsDetails[item.id].main_picture.url }}/200x150" width="200"  height="150">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="booking-item-rating">
                            <h2 class="booking-item-title" title="{{item.hotel.name}} - {{ 'hotels.hotels_in' | trans }} {{ app.session.get('destination').text }} - VientoSur.net">{{item.hotel.name}}</h2>
                            <ul class="icon-group booking-item-rating-stars">
                                {% for i in 1..5 %}
                                    {% if i <= item.hotel.stars %}
                                        <li><i class="fa fa-star"></i>
                                        </li>
                                        {#{% else %}#}
                                        <!--<li><i class="fa fa-star-o"></i>
                                        </li>-->
                                    {% endif %}
                                    <!--<li><i class="fa fa-star-half-empty"></i>
                                    </li>-->
                                {% endfor %}
                            </ul>
                        </div>
                        <p class="booking-item-address">
                            {#A 600 metros del centro#}
                            <i class="fa fa-map-marker" data-prevent="modal" data-latitude="{{ item.hotel.location.latitude }}" data-longitude="{{ item.hotel.location.longitude }}" data-name="{{ item.hotel.name }}"> {{ 'hotels.map_view' | trans }}</i>
                        </p>
                        {% for key, room_availability in item.roompacks %}
                            {% if room_availability.rooms[0].availability is defined %}
                                {% if  room_availability.rooms[0].availability < 6 %}
                                    <p class="booking-item-last-booked">
                                        {% if room_availability.rooms[0].availability == 1 %}
                                            {{ 'hotels.last_room' | trans }}
                                        {% else %}
                                            {{ 'hotels.lasts' | trans }} {{ room_availability.rooms[0].availability }} {{ 'index.search.hotel.rooms' | trans }}
                                        {% endif %}
                                    </p>
                                {% endif %}
                            {% endif %}
                        {% endfor %}
                        {% for key, amenity in item.hotel.amenity_ids %}
                            {% if amenity == 'INGRAH' %}
                                <span class="booking-services" title="{{ 'amenities.INGRAH' | trans }}"><i class="fa fa-wifi"></i></span>
                            {% elseif amenity == 'AIR' %}
                                <span class="booking-services" title="{{ 'amenities.AIR' | trans }}"><img src="{{ asset('img/air-conditioner.png') }}" /></span>
                            {% elseif amenity == 'BAG' %}
                                <span class="booking-services" title="{{ 'amenities.BAG' | trans }}"><i class="fa fa-suitcase"></i></span>
                            {% elseif amenity == 'BSNSC' %}
                                <span class="booking-services" title="{{ 'amenities.BSNSC' | trans }}"><i class="fa fa-users"></i></span>
                            {% elseif amenity == 'ELEV' %}
                                <span class="booking-services" title="{{ 'amenities.ELEV' | trans }}"><img src="{{ asset('img/elevator.png') }}" /></span>
                            {% elseif amenity == 'GIM' %}
                                <span class="booking-services" title="{{ 'amenities.GIM' | trans }}"><img src="{{ asset('img/weight.png') }}" /></span>
                            {% elseif amenity == 'HOT' %}
                                <span class="booking-services" title="{{ 'amenities.HOT' | trans }}"><i class="fa fa-fire"></i></span>
                            {% elseif amenity == 'LASESU' %}
                                <span class="booking-services" title="{{ 'amenities.LASESU' | trans }}"><img src="{{ asset('img/washer-machine.png') }}" /></span>
                            {% elseif amenity == 'LIPA' %}
                                <span class="booking-services" title="{{ 'amenities.LIPA' | trans }}"><img src="{{ asset('img/washer-machine.png') }}" /></span>
                            {% elseif amenity == 'MEETROOM' %}
                                <span class="booking-services" title="{{ 'amenities.MEETROOM' | trans }}"><img src="{{ asset('img/business-people-meeting.png') }}" /></span>
                            {% elseif amenity == 'OUSWPOSE' %}
                                <span class="booking-services" title="{{ 'amenities.OUSWPOSE' | trans }}"><img src="{{ asset('img/swimming-pool.png') }}" /></span>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="col-md-3 booking-prices align-center cursor-pointer" data-href="{{ path('viento_sur_app_app_homepage_show_hotel_id',{'_locale': app.request.locale, 'idHotel': item.id, 'checkin_date': reservation.checkin_date, 'checkout_date': reservation.checkout_date, 'distribution': reservation.distribution, 'latitude': item.hotel.location.latitude, 'longitude':item.hotel.location.longitude})}}">

                        <div class="booking-align-vertical"> <span class="booking-item-price-night">{{ 'hotels.room_per_night' | trans }}</span>
                            <span class="booking-item-price">
                                {%for price in item.roompacks%}
                                    {#$&nbsp;{{price.price_detail.nightly_subtotal|round|number_format(0, '.', '.') |  currency_convert_format(targetCurrency)}}#}
                                    {{ symbol }} {{price.price_detail.nightly_subtotal|round|currency_convert_format(targetCurrency, decimal, false)|number_format(0, '.', '.') }}
                                {%endfor%}
                            </span>
                            <span class="btn btn-primary">{{ 'hotels.choose_room' | trans }}</span>
                            <!--<span class="booking-item-benefit mt20">Cancele gratis</span>-->
                        </div>

                    </div>
                </div>
            </span>
        </li>
    {%endfor%}
{%endif%}