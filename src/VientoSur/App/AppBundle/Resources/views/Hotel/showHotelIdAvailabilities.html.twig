{% extends 'VientoSurAppAppBundle::layoutHotel.html.twig' %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        function initMap() {
            var myLatLng = {lat: {{ latitude }}, lng: {{ longitude }} };

            // Create a map object and specify the DOM element for display.
            var map = new google.maps.Map(document.getElementById('map'), {
                center: myLatLng,
                scrollwheel: false,
                zoom: 16
            });
            // Create a marker and set its position.
            var marker = new google.maps.Marker({
                map: map,
                position: myLatLng,
                title: '{{hotelDetails.name}}'
            });

            $('a[href="#google-map-tab"]').on('shown.bs.tab', function(e) {
                google.maps.event.trigger(map, 'resize');
                map.setCenter(myLatLng);
            });

        }

        $("#animarscroll").on("click", function(){
            var posicion = $(".booking-list-rooms").offset().top;
            $("html, body").animate({
                scrollTop: posicion
            }, 1500);
        });

        $(document).ready(function () {
            for (var key in roomCapacity) {
                if (roomCapacity.hasOwnProperty(key)) {
                    $('#room-capacity-' + key).text(roomCapacity[key]);
                }
            }

            var amenities = {{ hotelDetails.amenities|json_encode|raw }};

            var ser = '', rel = '', add = '';
            for (var i = 0; i < amenities.length; i++) {
                console.log(amenities[i].descriptions.es, amenities[i].amenity_category.id)
                var temp = '<li><i class="glyphicon glyphicon-ok"></i> ' + amenities[i].descriptions.es + '</li>';
                if(amenities[i].amenity_category.id == 'SER') {
                    ser += temp;
                } else if (amenities[i].amenity_category.id == 'REL') {
                    rel += temp;
                } else if (amenities[i].amenity_category.id == 'ADD') {
                    add += temp;
                }
            }
            $('.list-services').html(ser);
            $('.list-recreation').html(rel);
            $('.list-generals').html(add);

            $('#roomImgs').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var modal = $(this);
                modal.find('.modal-title').text($(button).data('room-name'));
                var key = $(button).data('room-key');
                console.log(roomTypes[key].pictures);
                var img = [];
                for (var i = 0, len = roomTypes[key].pictures.length; i < len; i++) {
                    img.push({
                        img: roomTypes[key].pictures[i].url,
                        thumb: roomTypes[key].pictures[i].picture_category.descriptions.es
                    })
                }
                modal.find('.modal-body').html('<div class="fotorama foto-div"></div>');
                $('.modal-body .foto-div').fotorama({
                    data: img,
                    nav: 'thumbs'
                });
            });
        })
    </script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCQF38I89N84GmzeuqCWVtFJTlcwuNwx04&callback=initMap"></script>

{% endblock %}

{% block content %}
    <div class="container">
        <ul class="breadcrumb">
            <li><a href="#">Viento Sur</a></li>
            <li><a href="index.html">Hoteles</a></li>
            <li><a href="#">Hotel {{hotelDetails.name}}</a></li>
        </ul>

        <div class="gap gap-small"></div>

        <div class="row">

            <div class="col-md-9 col-md-push-3">

                <!-- info del hotel -->
                <div class="booking-item-details">

                    <header class="booking-item-header">
                        <div class="row">
                            <div class="col-md-8">
                                <h2 class="lh1em"><b>{{ hotelDetails.name }}</b></h2>
                                <p>{{ hotelDetails.location.address }}</p>
                                <ul class="icon-list icon-group booking-item-rating-stars">
                                    {% for i in 1..5 %}
                                        {% if i <= hotelDetails.stars %}
                                            <li><i class="fa fa-star"></i>
                                            </li>
                                            {#{% else %}#}
                                            <!--<li><i class="fa fa-star-o"></i>
                                            </li>-->
                                        {% endif %}
                                    {% endfor %}
                                </ul>
                            </div>

                            <div class="col-md-4">
                                <div class="booking-item-header-price">
                                    <p>
                                        Precio por noche
                                    </p>
                                    <div class="text-lg">
                                        $&nbsp;{{ dispoHotel.roompacks[0].price_detail.nightly.subtotal|round|number_format(0, ',', '.') }}
                                    </div>
                                    <a href="#">
                                        <!--<span class="btn btn-primary mt15">Reservar ahora</span>-->
                                        <br />
                                        <button class="btn btn-primary" id="animarscroll">
                                            Ver Habitaciones
                                        </button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </header>

                    <div class="row">
                        <div class="col-md-10">
                            <!-- tabs-->
                            <div class="tabbable booking-details-tabbable">
                                <ul class="nav nav-tabs" id="myTab">
                                    <li class="active">
                                        <a href="#tab-1" data-toggle="tab" id="tab-fotos"><i class="fa fa-camera"></i>Fotos</a>
                                    </li>
                                    <li>
                                        <a href="#google-map-tab" data-toggle="tab" id="tab-mapa"><i class="fa fa-map-marker"></i>Mapa</a>
                                    </li>
                                </ul>

                                <div class="tab-content">
                                    <div class="tab-pane fade in active" id="tab-1">
                                        <div class="fotorama" data-allowfullscreen="true" data-nav="thumbs">
                                            {% for key, pictures in hotelDetails.pictures %}
                                                <img src="{{ pictures.url }}" alt="{{ pictures.picture_category.descriptions.es }}" title="{{ pictures.picture_category.descriptions.es }}" />
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="google-map-tab">
                                        <div id="map" style="width:500px; height:500px;"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div><!-- close info -->

                <div class="gap gap-small"></div>

                <div class="row booking-details-description">

                    <div class="col-md-10">

                        {#<h4>Este hotel está en Praga 1 y es ideal para: De lujo</h4>#}

                        <p class="text-justify" style="color: #003580">{{ hotelDetails.information.es }}</p>

                        <h4>N&uacute;mero de habitaciones: {{ hotelDetails.number_of_rooms}}</h4>
                    </div>

                </div>

                <div class="gap gap-small"></div>

                <!-- lista habitaciones disponibles -->
                <div class="booking-list-rooms">
                    <script>
                        var roomCapacity = {};
                        var roomTypes = {{ roomTypesEncoded|raw }};
                    </script>
                    {% if roomDetail is not empty %}
                    <h3>Habitaciones disponibles</h3>
                    <ul class="booking-list">
                        {% for key, rooms in roomDetail %}
                            <li>
                                <div class="booking-item">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div><b>{{ roomTypes[key].despegar_names.es }}</b></div>
                                            <div class="booking-item-img-wrap cursor-pointer" data-toggle="modal" data-target="#roomImgs" data-room-name="{{ roomTypes[key].despegar_names.es }}" data-room-key="{{ key }}">
                                                <img src="{{ roomTypes[key].pictures[0].url}}/180x120" alt="Habitaci&oacute;n" title="" />
                                                <div class="booking-item-img-num"><i class="fa fa-picture-o"></i>{{ roomTypes[key].pictures|length }}</div>
                                            </div>
                                            <div><i class="fa fa-male"></i> <span id="room-capacity-{{ key }}"></span> Capacidad máxima</div>
                                        </div>

                                        <div class="col-md-9">
                                            <div class="table-responsive">
                                                <table class="table">
                                                    <thead>
                                                    <tr>
                                                        <th>R&eacute;gimen de comida</th>
                                                        <th>Pol&iacute;ticas de cancelaci&oacute;n</th>
                                                        <th></th>
                                                        <th colspan="2" class="text-center">Precio por noche</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    {% for key, rate_plan in rooms %}
                                                        {% set room = rate_plan[0] %}
                                                        {% if loop.first %}
                                                        <script>
                                                            roomCapacity[{{ loop.parent.key }}] = {{ room.rooms[0].capacity.max }};
                                                        </script>
                                                        {% endif %}
                                                        <tr>
                                                            <td>
                                                                {% if room.meal_plan.id == 'D' %}
                                                                    Bebidas incluidas
                                                                {% elseif room.meal_plan.id == 'BRA' %}
                                                                    Desayuno americano
                                                                {% elseif room.meal_plan.id == 'BRL' %}
                                                                    Desayuno a la carta
                                                                {% elseif room.meal_plan.id == 'BRB' %}
                                                                    Desayuno buffet
                                                                {% elseif room.meal_plan.id == 'BRC' %}
                                                                    Desayuno continental
                                                                {% elseif room.meal_plan.id == 'M' %}
                                                                    Media pensión
                                                                {% elseif room.meal_plan.id == 'H' %}
                                                                    Sólo hospedaje
                                                                {% elseif room.meal_plan.id == 'F' %}
                                                                    Pensión completa
                                                                {% elseif room.meal_plan.id == 'A' %}
                                                                    All inclusive
                                                                {% endif %}
                                                            </td>
                                                            <td>
                                                                {{ room.cancellation_policy.text }}
                                                            </td>
                                                            <td style="min-width: 80px;">
                                                                <span><b>$ {{ room.price_detail.nightly.subtotal|round|number_format(0, ',', '.') }}</b></span>
                                                            </td>
                                                            <td>
                                                                <form action="{{path('viento_sur_app_app_homepage_send_hotel_booking')}}?{{ reservation|url_encode }}" method="POST" >
                                                                    <input type="hidden" name="availability_token" value="{{dispoHotel.availability_token}}">
                                                                    <input type="hidden" name="roompack_choice" value="{{ room.choice }}">
                                                                    <input type="hidden" name="hotel_img" value="{{ hotelDetails.main_picture.url }}">
                                                                    <input type="hidden" name="hotel_name" value="{{hotelDetails.name}}">
                                                                    <input type="hidden" name="hotel_stars" value="{{hotelDetails.stars}}">
                                                                    <input type="hidden" name="hotel_address" value="{{hotelDetails.location.address}}">
                                                                    <input type="hidden" name="room_cancellation" value="{{room.cancellation_policy.text}}">
                                                                    <button type="submit" class="btn btn-primary">
                                                                        Reservar
                                                                    </button>
                                                                </form>
                                                            </td>
                                                        </tr>
                                                    {% endfor %}
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>

                                        {#<div class="col-md-3 booking-prices align-center">#}

                                        {#</div>#}
                                    </div>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>

                    {% else %}
                        <h3>Habitaciones no disponibles</h3>
                    {% endif %}
{#{{ dump(hotelDetails) }}#}
{#{{ dump(roomTypes) }}#}
                </div>

                <div class="gap"></div>

                <div class="row row-wrap">
                    <div class="col-md-4">
                        <h4>Servicios</h4>
                        <ul class="amenities-list list-services">
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <h4>Actividades</h4>
                        <ul class="amenities-list list-recreation">
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <h4>Generales</h4>
                        <ul class="amenities-list list-generals">
                        </ul>
                    </div>
                </div>

                <div class="gap"></div>

                <!-- opiniones -->
                <h3 class="mb20">Opiniones acerca de este hotel</h3>

                <div class="row row-wrap">
                    <div class="col-md-11">
                        <!--<div class="fb-comments" data-href="http://viento-sur.icox.mobi" data-width="600 px" data-numposts="5"></div>-->
                        <div class="fb-comments" data-href="http://viento-sur.icox.mobi/hotel/show/{{idHotel}}" data-width="600 px" data-numposts="10"></div>
                    </div>
                </div>


            </div> <!-- close col md9-->

            <div class="col-md-3 col-md-pull-9">
                {% include 'VientoSurAppAppBundle:Hotel:searchMenuLeft.html.twig' %}
            </div>
            <!-- cierra sidebar -->
        </div>
        <div class="gap"></div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="roomImgs" tabindex="-1" role="dialog" aria-labelledby="roomImgsModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
