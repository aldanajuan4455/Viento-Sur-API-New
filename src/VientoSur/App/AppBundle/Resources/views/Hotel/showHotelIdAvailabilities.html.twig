{% extends 'VientoSurAppAppBundle::layoutHotel.html.twig' %}

{% block javascripts %}
    {{ parent() }}


    <script type="text/javascript">
        function initMap() {
            var myLatLng = {lat: {{ latitude }}, lng: {{ longitude }} };

            // Create a map object and specify the DOM element for display.
            var map = new google.maps.Map(document.getElementById('map'), {
                center: myLatLng,
                scrollwheel: false,
                zoom: 16
            });
            // Create a marker and set its position.
            var marker = new google.maps.Marker({
                map: map,
                position: myLatLng,
                title: '{{hotelDetails.name}}'
            });

            $('a[href="#google-map-tab"]').on('shown.bs.tab', function(e) {
                google.maps.event.trigger(map, 'resize');
                map.setCenter(myLatLng);
            });

        }

        $("#animarscroll").on("click", function(){
            var posicion = $(".booking-list-rooms").offset().top;
            $("html, body").animate({
                scrollTop: posicion
            }, 1500);
        });

    </script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCQF38I89N84GmzeuqCWVtFJTlcwuNwx04&callback=initMap"></script>

{% endblock %}

{% block content %}
    <div class="container">
        <ul class="breadcrumb">
            <li><a href="#">Viento Sur</a></li>
            <li><a href="index.html">Hoteles</a></li>
            <li><a href="#">Hotel {{hotelDetails.name}}</a></li>
        </ul>

        <div class="gap gap-small"></div>

        <div class="row">

            <div class="col-md-3">
                {% include 'VientoSurAppAppBundle:Hotel:searchMenuLeft.html.twig' %}
            </div>
            <!-- cierra sidebar -->

            <div class="col-md-9">

                <!-- info del hotel -->
                <div class="booking-item-details">

                    <header class="booking-item-header">
                        <div class="row">
                            <div class="col-md-8">
                                <h2 class="lh1em">{{hotelDetails.name}}</h2>
                                <ul class="icon-list icon-group booking-item-rating-stars">
                                    {% for i in 1..5 %}
                                        {% if i <= hotelDetails.stars %}
                                            <li><i class="fa fa-star"></i>
                                            </li>
                                            {#{% else %}#}
                                            <!--<li><i class="fa fa-star-o"></i>
                                            </li>-->
                                        {% endif %}
                                    {% endfor %}
                                </ul>
                            </div>

                            <div class="col-md-4">
                                <div class="booking-item-header-price">
                                    <p>
                                        Precio por noche
                                    </p>
                                    <div class="text-lg">
                                        {{dispoHotel.roompacks[0].price_detail.currency}}&nbsp;
                                        {{dispoHotel.roompacks[0].price_detail.nightly.subtotal}}
                                    </div>
                                    <a href="#">
                                        <!--<span class="btn btn-primary mt15">Reservar ahora</span>-->
                                        <br />
                                        <button class="btn btn-primary" id="animarscroll">
                                            Ver Habitaciones
                                        </button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </header>

                    <div class="row">
                        <div class="col-md-8">
                            <!-- tabs-->
                            <div class="tabbable booking-details-tabbable">
                                <ul class="nav nav-tabs" id="myTab">
                                    <li class="active">
                                        <a href="#tab-1" data-toggle="tab" id="tab-fotos"><i class="fa fa-camera"></i>Fotos</a>
                                    </li>
                                    <li>
                                        <a href="#google-map-tab" data-toggle="tab" id="tab-mapa"><i class="fa fa-map-marker"></i>Mapa</a>
                                    </li>
                                </ul>

                                <div class="tab-content">
                                    <div class="tab-pane fade in active" id="tab-1">
                                        <div class="fotorama" data-allowfullscreen="true" data-nav="thumbs">
                                            {% for key, pictures in hotelDetails.pictures %}
                                                <img src="{{ pictures.url }}" alt="{{ pictures.picture_category.descriptions.es }}" title="{{ pictures.picture_category.descriptions.es }}" />
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="google-map-tab">
                                        <div id="map" style="width:500px; height:500px;"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div><!-- close info -->

                <div class="gap gap-small"></div>

                <div class="row booking-details-description">

                    <div class="col-md-10">

                        <!--<h4>Este hotel est치 en Praga 1 y es ideal para: De lujo</h4>-->

                        <p>{{ hotelDetails.information.es }}</p>

                        <h4>N&uacute;mero de habitaciones: {{ hotelDetails.number_of_rooms}}</h4>
                    </div>

                </div>

                <div class="gap gap-small"></div>

                <!-- lista habitaciones disponibles -->
                <div class="booking-list-rooms">

                    <h3>Habitaciones disponibles</h3>

                    <ul class="booking-list">
                        {% for key, rooms in roomDetail %}
                            <li>
                                <div class="booking-item">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div>{{ roomTypes[key].despegar_names.es }}</div>
                                            <div class="booking-item-img-wrap">
                                                <img src="{{ roomTypes[key].pictures[0].url}}" alt="Habitaci&oacute;n" title="" />
                                                <div class="booking-item-img-num"><i class="fa fa-picture-o"></i>{{ roomTypes[key].pictures|length }}</div>
                                            </div>
                                        </div>

                                        <div class="col-md-9">
                                            <table class="table">
                                                <thead>
                                                    <tr>
                                                        <th>R&eacute;gimen de comida</th>
                                                        <th>Pol&iacute;ticas de cancelaci&oacute;n</th>
                                                        <th>Precio por noche</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                {% for room in rooms %}
                                                    <tr>
                                                        <td>
                                                            {% if room.meal_plan.id == 'D' %}
                                                                Bebidas incluidas
                                                            {% elseif room.meal_plan.id == 'BRA' %}
                                                                Desayuno americano
                                                            {% elseif room.meal_plan.id == 'BRL' %}
                                                                Desayuno a la carta
                                                            {% elseif room.meal_plan.id == 'BRB' %}
                                                                Desayuno buffet
                                                            {% elseif room.meal_plan.id == 'BRC' %}
                                                                Desayuno continental
                                                            {% elseif room.meal_plan.id == 'M' %}
                                                                Media pensi칩n
                                                            {% elseif room.meal_plan.id == 'H' %}
                                                                S칩lo hospedaje
                                                            {% elseif room.meal_plan.id == 'F' %}
                                                                Pensi칩n completa
                                                            {% elseif room.meal_plan.id == 'A' %}
                                                                All inclusive
                                                            {% endif %}
                                                        </td>
                                                        <td>
                                                            {{ room.cancellation_policy.text }}
                                                        </td>
                                                        <td>
                                                            <b class="">{{ room.price_detail.currency }} {{ room.price_detail.nightly.subtotal|number_format(2, ',', '.') }}</b>
                                                            <form action="{{path('viento_sur_app_app_homepage_send_hotel_booking')}}?{{ reservation|url_encode }}" method="POST" >
                                                                <input type="hidden" name="availability_token" value="{{dispoHotel.availability_token}}">
                                                                <input type="hidden" name="roompack_choice" value="{{ room.choice }}">
                                                                <button type="submit" class="btn btn-primary">
                                                                    Reservar
                                                                </button>
                                                            </form>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>

                                        </div>

                                        {#<div class="col-md-3 booking-prices align-center">#}

                                        {#</div>#}
                                    </div>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>

                </div>

                <div class="gap"></div>

                <!-- opiniones -->
                <h3 class="mb20">Opiniones acerca de este hotel</h3>

                <div class="row row-wrap">
                    <div class="col-md-11">
                        <!--<div class="fb-comments" data-href="http://viento-sur.icox.mobi" data-width="600 px" data-numposts="5"></div>-->
                        <div class="fb-comments" data-href="http://viento-sur.icox.mobi/hotel/show/{{idHotel}}" data-width="600 px" data-numposts="10"></div>
                    </div>
                </div>


            </div> <!-- close col md9-->
        </div>
        <div class="gap"></div>
    </div>
{% endblock %}
