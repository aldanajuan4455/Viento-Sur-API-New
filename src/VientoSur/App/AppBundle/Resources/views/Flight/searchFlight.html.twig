<form name="searchFlight" id="search-flights" action="{{ path('viento_sur_process_search_flights', {'_locale': app.request.locale} ) }}" method="POST">
    <div class="row">
        <div class="col-xs-5 round-trip-wrapper">
            <h4>{{ 'index.search.flight.from' | trans }}</h4>
            {% if isTest %}
                <div class="form-group-icon-left marginBottom10">
                    <i class="fa fa-map-marker input-icon"></i>
                    <input class="city-input form-control" id="from-flight" name="from-flight" data-provide="typeahead" placeholder="{{ 'index.search.flight.from_placeholder' | trans }}" type="text" value="{% if app.session.get('origin_flight').text is defined %}{{ app.session.get('origin_flight').text }}{% endif %}"/>
                    <input id="originFlight" name="originFlight" type="hidden" value="{% if app.session.get('origin_flight').id is defined %}{{ app.session.get('origin_flight').id }}{% endif %}" />
                </div>
                <div class="form-group-icon-left marginBottom10">
                    <i class="fa fa-map-marker input-icon"></i>
                    <input class="city-input form-control" id="to-flight" name="to-flight" data-provide="typeahead" placeholder="{{ 'index.search.flight.to_placeholder' | trans }}" type="text" value="{% if app.session.get('destination_flight').text is defined %}{{ app.session.get('destination_flight').text }}{% endif %}">
                    <input id="destinationFlight" name="destinationFlight" type="hidden" value="{% if app.session.get('destination_flight').id is defined %}{{ app.session.get('destination_flight').id }}{% endif %}" />
                </div>
            {% else %}
                <div class="form-group-icon-left marginBottom10">
                    <i class="fa fa-map-marker input-icon"></i>
                    <input class="city-input form-control" id="from-flight" name="from-flight" data-provide="typeahead" placeholder="{{ 'index.search.flight.from_placeholder' | trans }}" type="text" value="{% if app.session.get('origin_flight').text is defined %}{{ app.session.get('origin_flight').text }}{% endif %}" required />
                    <input id="originFlight" name="originFlight" type="hidden" value="{% if app.session.get('origin_flight').id is defined %}{{ app.session.get('origin_flight').id }}{% endif %}" />
                </div>
                <div class="form-group-icon-left marginBottom10">
                    <i class="fa fa-map-marker input-icon"></i>
                    <input class="city-input form-control" id="to-flight" name="to-flight" data-provide="typeahead" placeholder="{{ 'index.search.flight.to_placeholder' | trans }}" type="text" value="{% if app.session.get('destination_flight').text is defined %}{{ app.session.get('destination_flight').text }}{% endif %}" required >
                    <input id="destinationFlight" name="destinationFlight" type="hidden" value="{% if app.session.get('destination_flight').id is defined %}{{ app.session.get('destination_flight').id }}{% endif %}" />
                </div>
            {% endif %}
            <input type="hidden" id="multipledestination" name="multipledestination" value=false>
        </div>

        <div class="col-xs-2 paddingSpecial round-trip-wrapper">
            <h4 id="toDate">{{ 'index.search.hotel.date' | trans }}</h4>
            <div class="">
                <div class='input-group date marginBottom10 col-xs-12' id='datetimepicker3'>
                    <i class="glyphicon glyphicon-calendar"></i>
                    <input class="form-control required" id="start-flight" name="start" type="text" placeholder="dd/mm/yyyy" value="{{app.session.get('departure_date')}}" />
                </div>
                <div class='input-group date marginBottom10 col-xs-12' id='datetimepicker4'>
                    <i class="glyphicon glyphicon-calendar"></i>
                    <input class="form-control required" id="end-flight" name="end" type="text" placeholder="dd/mm/yyyy" value="{{app.session.get('return_date')}}" />
                    <input class="form-control hidden" id="dummy-end-flight" type="text" placeholder="{{ 'index.search.flight.one_way' | trans }}" readonly />
                </div>
            </div>
        </div>

        <div class="col-xs-5 right">
            <h4>{{ 'flights.passengers' | trans }}</h4>
            <div class="selectPassengers">
                <div class="marginBottom10">
                    <button type="button" class="btnModal" data-toggle="modal" data-target="#passengersModal">
                        {{ 'index.search.hotel.adults' | trans }}: <span id="total-adults">0</span>
                        | {{ 'index.search.hotel.childs' | trans }}: <span id="total-children">0</span>
                        | Total {{ 'flights.passengers' | trans }}: <span id="total-passengers">0</span>
                    </button>
                    <!-- Modal passengers -->
                    <div class="modal fade" id="passengersModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="fa fa-times" aria-hidden="true"></i>
                                    </button>
                                    <h4 class="modal-title" id="myModalLabel">{{ 'flights.passengers' | trans }}</h4>
                                </div>
                                <div class="modal-body modal-flight">
                                    <div class="contentFlight">
                                        <div class="selectFlight">
                                            <div class="selectGroup">
                                                <h3>{{ 'index.search.hotel.adults' | trans }}</h3>
                                                <select id="adultsPassengers" name="adultsPassengers" data-couple="childrenPassengers.0">
                                                    <option value="1">1</option>
                                                    <option value="2">2</option>
                                                    <option value="3">3</option>
                                                    <option value="4">4</option>
                                                    <option value="5">5</option>
                                                    <option value="6">6</option>
                                                    <option value="7">7</option>
                                                    <option value="8">8</option>
                                                </select>
                                            </div>
                                            <div class="selectGroup">
                                                <h3>{{ 'index.search.flight.children' | trans }}</h3>
                                                <select id="childrenPassengers" name="childrenPassengers" data-couple="adultsPassengers.1">
                                                    <option value="0">0</option>
                                                    <option value="1">1</option>
                                                    <option value="2">2</option>
                                                    <option value="3">3</option>
                                                    <option value="4">4</option>
                                                    <option value="5">5</option>
                                                    <option value="6">6</option>
                                                    <option value="7">7</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="selectFlight hidden" id="menorGroup">
                                            <div class="selectGroup field-menor-1">
                                                <h3>{{ 'flights.labels.child' | trans }} 1</h3>
                                                <select id="field-menor-1" class="form-control " name="field-menor-1">
                                                    <option>{{ 'index.search.flight.0_24_arm' | trans }}</option>
                                                    <option>{{ 'index.search.flight.0_24:seat' | trans }}</option>
                                                    <option>{{ 'index.search.flight.2_11' | trans }}</option>
                                                    <option>{{ 'index.search.flight.12_more' | trans }}</option>
                                                </select>
                                            </div>

                                            <div class="selectGroup field-menor-2">
                                                <h3>{{ 'flights.labels.child' | trans }} 2</h3>
                                                <select id="field-menor-2" class="form-control " name="field-menor-2">
                                                    <option>{{ 'index.search.flight.0_24_arm' | trans }}</option>
                                                    <option>{{ 'index.search.flight.0_24:seat' | trans }}</option>
                                                    <option>{{ 'index.search.flight.2_11' | trans }}</option>
                                                    <option>{{ 'index.search.flight.12_more' | trans }}</option>
                                                </select>
                                            </div>

                                            <div class="selectGroup field-menor-3">
                                                <h3>{{ 'flights.labels.child' | trans }} 3</h3>
                                                <select id="field-menor-3" class="form-control " name="field-menor-3">
                                                    <option>{{ 'index.search.flight.0_24_arm' | trans }}</option>
                                                    <option>{{ 'index.search.flight.0_24:seat' | trans }}</option>
                                                    <option>{{ 'index.search.flight.2_11' | trans }}</option>
                                                    <option>{{ 'index.search.flight.12_more' | trans }}</option>
                                                </select>
                                            </div>

                                            <div class="selectGroup field-menor-4">
                                                <h3>{{ 'flights.labels.child' | trans }} 4</h3>
                                                <select id="field-menor-4" class="form-control " name="field-menor-4">
                                                    <option>{{ 'index.search.flight.0_24_arm' | trans }}</option>
                                                    <option>{{ 'index.search.flight.0_24:seat' | trans }}</option>
                                                    <option>{{ 'index.search.flight.2_11' | trans }}</option>
                                                    <option>{{ 'index.search.flight.12_more' | trans }}</option>
                                                </select>
                                            </div>

                                            <div class="selectGroup field-menor-5">
                                                <h3>{{ 'flights.labels.child' | trans }} 5</h3>
                                                <select id="field-menor-5" class="form-control " name="field-menor-5">
                                                    <option>{{ 'index.search.flight.0_24_arm' | trans }}</option>
                                                    <option>{{ 'index.search.flight.0_24:seat' | trans }}</option>
                                                    <option>{{ 'index.search.flight.2_11' | trans }}</option>
                                                    <option>{{ 'index.search.flight.12_more' | trans }}</option>
                                                </select>
                                            </div>

                                            <div class="selectGroup field-menor-6">
                                                <h3>{{ 'flights.labels.child' | trans }} 6</h3>
                                                <select id="field-menor-6" class="form-control " name="field-menor-6">
                                                    <option>{{ 'index.search.flight.0_24_arm' | trans }}</option>
                                                    <option>{{ 'index.search.flight.0_24:seat' | trans }}</option>
                                                    <option>{{ 'index.search.flight.2_11' | trans }}</option>
                                                    <option>{{ 'index.search.flight.12_more' | trans }}</option>
                                                </select>
                                            </div>

                                            <div class="selectGroup field-menor-7">
                                                <h3>{{ 'flights.labels.child' | trans }} 7</h3>
                                                <select id="field-menor-7" class="form-control " name="field-menor-7">
                                                    <option>{{ 'index.search.flight.0_24_arm' | trans }}</option>
                                                    <option>{{ 'index.search.flight.0_24:seat' | trans }}</option>
                                                    <option>{{ 'index.search.flight.2_11' | trans }}</option>
                                                    <option>{{ 'index.search.flight.12_more' | trans }}</option>
                                                </select>
                                            </div>

                                        </div>
                                        <div class="btnSearch" data-dismiss="modal">
                                            <button>{{ 'hotels.search_menu.apply' | trans }}</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Modal flights -->
                    <div class="modal fade" id="flightsModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="fa fa-times" aria-hidden="true"></i>
                                    </button>
                                    <h4 class="modal-title" id="myModalLabel">{{ 'index.search.flight.multiple_destinations' | trans }}</h4>
                                </div>
                                <div class="modal-body modal-flight">
                                    <div class="contentFlight">

                                        <div class="row wrapper" style="display: none">
                                            <div class="col-xs-12">
                                                <div class="col-xs-5 ">
                                                    <p id="label-stretch"
                                                       class="multiple-destinations-label">{{ 'index.search.flight.stretch' | trans }}
                                                        1</p>
                                                    <p id="label-stretch"
                                                       style="display: none">{{ 'index.search.stretch' | trans }}</p>
                                                    <div class="form-group-icon-left marginBottom10">
                                                        <i class="fa fa-map-marker input-icon"></i>
                                                        <input class="city-input form-control"
                                                               id="multidestination-from-flight0"
                                                               name="multidestination[0][fromFlight]"
                                                               data-provide="typeahead"
                                                               placeholder="{{ 'index.search.flight.from_placeholder' | trans }}"
                                                               type="text"
                                                               value="{% if app.session.get('origin_flight').text is defined %}{{ app.session.get('origin_flight').text }}{% endif %}"/>
                                                        <input id="multidestination-originFlight0"
                                                               name="multidestination[0][originFlight]" type="hidden"
                                                               value="{% if app.session.get('origin_flight').id is defined %}{{ app.session.get('origin_flight').id }}{% endif %}"/>
                                                    </div>
                                                    <div class="form-group-icon-left marginBottom10">
                                                        <i class="fa fa-map-marker input-icon"></i>
                                                        <input class="city-input form-control"
                                                               id="multidestination-to-flight0"
                                                               name="multidestination[0][toFlight]"
                                                               data-provide="typeahead"
                                                               placeholder="{{ 'index.search.flight.to_placeholder' | trans }}"
                                                               type="text"
                                                               value="{% if app.session.get('destination_flight').text is defined %}{{ app.session.get('destination_flight').text }}{% endif %}"/>
                                                        <input id="multidestination-destinationFlight0"
                                                               name="multidestination[0][destinationFlight]"
                                                               type="hidden"
                                                               value="{% if app.session.get('destination_flight').id is defined %}{{ app.session.get('destination_flight').id }}{% endif %}"/>
                                                    </div>
                                                </div>
                                                <div class="col-xs-2 paddingSpecial multiple-destinations-wrapper">
                                                    <p>{{ 'index.search.hotel.date' | trans }}</p>
                                                    <div class='input-group date marginBottom10 col-xs-12'
                                                         id='datetimepicker3'>
                                                        <i class="glyphicon glyphicon-calendar"></i>
                                                        <input class="form-control required departure"
                                                               id="start-flight0" name="multidestination[0][start]"
                                                               type="text" placeholder="dd/mm/yyyy"
                                                               value="{{ app.session.get('departure_date') }}"/>
                                                        {#<input class="form-control required" id="start-flight" name="start" type="text" placeholder="dd/mm/yyyy" value="{{app.session.get('departure_date')}}" />#}
                                                        {#<input type="text" class="form-control" value="" id="dpd3">#}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row wrapper" style="display: none">
                                            <div class="col-xs-12">
                                                <div class="col-xs-5 ">
                                                    <p class="multiple-destinations-label">{{ 'index.search.flight.stretch' | trans }}
                                                        2</p>
                                                    <div class="form-group-icon-left marginBottom10">
                                                        <i class="fa fa-map-marker input-icon"></i>
                                                        <input class="city-input form-control"
                                                               id="multidestination-from-flight1"
                                                               name="multidestination[1][fromFlight]"
                                                               data-provide="typeahead" type="text"
                                                               placeholder="{{ 'index.search.flight.from_placeholder' | trans }}"/>
                                                        <input id="multidestination-originFlight1"
                                                               name="multidestination[1][originFlight]" type="hidden"
                                                               value=""/>
                                                    </div>
                                                    <div class="form-group-icon-left marginBottom10">
                                                        <i class="fa fa-map-marker input-icon"></i>
                                                        <input class="city-input form-control"
                                                               id="multidestination-to-flight1"
                                                               name="multidestination[1][toFlight]"
                                                               data-provide="typeahead"
                                                               placeholder="{{ 'index.search.flight.to_placeholder' | trans }}"
                                                               type="text"/>
                                                        <input id="multidestination-destinationFlight1"
                                                               name="multidestination[1][destinationFlight]"
                                                               type="hidden" value=""/>
                                                    </div>
                                                </div>
                                                <div class="col-xs-2 paddingSpecial multiple-destinations-wrapper">
                                                    <p>{{ 'index.search.hotel.date' | trans }}</p>
                                                    <div class='input-group date marginBottom10 col-xs-12'
                                                         id='datetimepicker3'>
                                                        <i class="glyphicon glyphicon-calendar"></i>
                                                        <input class="form-control required departure"
                                                               id="start-flight1" name="multidestination[1][start]"
                                                               type="text" placeholder="dd/mm/yyyy"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-12 stretch">
                                            <label for="">
                                                <span class="pull-right">
                                                    <a id="remove-stretch" style="display: none;">{{ 'index.search.flight.remove_stretch' | trans }}</a>
                                                </span>
                                            </label>
                                        </div>
                                        <div class="col-md-12">
                                            <label for="">
                                                <span class="pull-right">
                                                    <a id="add-stretch" style="display: none;">{{ 'index.search.flight.add_stretch' | trans }}</a>
                                                </span>
                                            </label>
                                        </div>

                                        <div class="btnSearch"  id="sendFlight">
                                            <button>{{ 'hotels.search_menu.apply' | trans }}</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="typeTrip" id="typeTrip">
                    <label class="radio-inline">
                        <input type="radio" value="only_out" name="flightType" >
                        <span>{{ 'index.search.flight.one_way' | trans }}</span>
                    </label>
                    <label class="radio-inline">
                        <input type="radio" value="round_trip" name="flightType" id="round_trip" checked> <span>Ida y Vuelta</span>
                    </label>
                    <label class="radio-inline">
                        {#<a id="openFlight" class="openFlight" style="color: #0281c0"><span>{{ 'index.search.flight.multiple_destinations' | trans }}</span></a>#}
                        <a id="openFlight" class="openFlight" style="color: #000000">
                            <input type="radio" value="multiple_destination" name="flightType" id="multiple_destination" > <span>{{ 'index.search.flight.multiple_destinations' | trans }}</span>
                        </a>
                    </label>
                    <input type="hidden" id="only_out" name="only_out" value=false>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xs-12 btnSearch" style="padding-top: 60px">
        <button class="btn btn-primary btn-lg" type="submit" id="submitFlight">{{ 'index.search_text' | trans }}</button>
    </div>
</form>

<div class="hide" id="searchFlightMsg">
    <h3 title="{{ 'index.search.flight.searching' | trans }} - VientoSur.net"><b>{{ 'index.search.flight.searching' | trans }}</b></h3>
    <div class="progress">
        <div class="progress-bar" id="flight_pb" role="progressbar" aria-valuenow="60"
             aria-valuemin="0" aria-valuemax="100" style="width: 1%;">
            <span class="sr-only"></span>
        </div>
    </div>
</div>