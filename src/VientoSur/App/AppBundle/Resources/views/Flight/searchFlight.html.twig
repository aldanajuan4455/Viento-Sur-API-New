<h2><b>Buscá tu vuelo</b></h2>

<form name="searchFlight" id="search-flights" action="{{ path('viento_sur_send_flights', { 'page': '1' } ) }}" method="GET">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group form-group-sm form-group-icon-left"><i class="fa fa-map-marker input-icon"></i>
                <label>Origen</label>
                <input class="form-control" id="from-flight" name="from-flight" data-provide="typeahead" placeholder="Ingresa desde dónde viajas" type="text"/>
                <input id="originFlight" name="originFlight" type="hidden" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group form-group-sm form-group-icon-left"><i class="fa fa-map-marker input-icon"></i>
                <label>Destino</label>
                <input class="form-control" id="to-flight" name="to-flight" data-provide="typeahead" placeholder="Ingresa hacia dónde viajas" type="text"/>
                <input id="destinationFlight" name="destinationFlight" type="hidden" />
            </div>
        </div>
        <div> <!--class="input-daterange" data-date-format="d M, D"-->
            <div class="col-md-6">
                <div class="form-group form-group-sm form-group-icon-left"><i class="fa fa-calendar input-icon input-icon-highlight"></i>
                    <label>Partida</label>
                    <input class="form-control required" id="start-flight" name="start" type="text" required="" placeholder="dd/mm/yyyy" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group form-group-sm form-group-icon-left"><i class="fa fa-calendar input-icon input-icon-highlight"></i>
                    <label>Regreso</label>
                    <input class="form-control required" id="end-flight" name="end" type="text" required="" placeholder="dd/mm/yyyy" />
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group form-group-sm">
                <label for="adultsPassengers">Adultos</label>
                <select id="adultsPassengers" class="form-control coupled" name="adultsPassengers" data-couple="childrenPassengers.0">
                    <option value="1" selected="selected">1</option>
                    <option value="2" >2</option>
                    <option value="3" >3</option>
                    <option value="4" >4</option>
                    <option value="5" >5</option>
                    <option value="6" >6</option>
                    <option value="7" >7</option>
                    <option value="8" >8</option>
                </select>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group form-group-sm">
                <label for="childrenPassengers">Menores</label>
                <select id="childrenPassengers" class="form-control coupled" name="childrenPassengers" data-couple="adultsPassengers.1">
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                </select>
            </div>
        </div>
        <!--se abre si hay menores-->
        <div class="col-md-12 MenoresNum mb10 hidden" id="menorGroup">
            <div class="form-group form-group-sm form-group-select-plus">
                <label for="field-hotel-adult">Edad de los menores al finalizar el viaje</label>
            </div>

            <!--depende del numero de menores-->
            <div class="col-md-3 field-menor-1">
                <div class="form-group form-group-sm form-group-select-plus">
                    <select id="field-menor-1" class="form-control " name="field-menor-1">
                        <option value="">Menor 1</option>
                        <option value="M">0 a 24 meses (en brazos)</option>
