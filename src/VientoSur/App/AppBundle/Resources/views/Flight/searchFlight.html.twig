<h2><b>Buscá tu vuelo</b></h2>

<form name="searchFlight" id="search-flights" action="{{ path('viento_sur_send_flights', { 'offset': '1', 'limit':'1' } ) }}" method="GET">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group form-group-sm form-group-icon-left"><i class="fa fa-map-marker input-icon"></i>
                <label>Origen</label>
                <input class="typeahead form-control" id="from-flight" name="from-flight" placeholder="Ingresa desde dónde viajas" type="text"/>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group form-group-sm form-group-icon-left"><i class="fa fa-map-marker input-icon"></i>
                <label>Destino</label>
                <input class="typeahead form-control" id="to-flight" name="to-flight" placeholder="Ingresa hacia dónde viajas" type="text"/>
            </div>
        </div>
        <div class="input-daterange" data-date-format="d M, D">
            <div class="col-md-6">
                <div class="form-group form-group-sm form-group-icon-left"><i class="fa fa-calendar input-icon input-icon-highlight"></i>
                    <label>Partida</label>
                    <input class="form-control required" name="fromCalendarVuelo" type="text" required="" placeholder="dd/mm/yyyy"/>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group form-group-sm form-group-icon-left"><i class="fa fa-calendar input-icon input-icon-highlight"></i>
                    <label>Regreso</label>
                    <input class="form-control required" name="toCalendarVuelo" type="text" required="" placeholder="dd/mm/yyyy"/>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group form-group-sm form-group-select-plus">
                <label>Adultos</label>
                <div class="btn-group btn-group-select-num" data-toggle="buttons">
                    <label class="btn btn-primary active">
                        <input type="radio" name="adults" />1</label>
                    <label class="btn btn-primary">
                        <input type="radio" name="adults" />2</label>
                    <label class="btn btn-primary">
                        <input type="radio" name="adults" />3</label>
                    <label class="btn btn-primary">
                        <input type="radio" name="adults" />3+</label>
                </div>
                <select class="form-control hidden" name="adults-plus">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option selected="selected">4</option>
                    <option>5</option>
                    <option>6</option>
                    <option>7</option>
                    <option>8</option>
                    <option>9</option>
                    <option>10</option>
                    <option>11</option>
                    <option>12</option>
                    <option>13</option>
                    <option>14</option>
                </select>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group form-group-sm form-group-select-plus">
                <label>Niños</label>
                <div class="btn-group btn-group-select-num children-num" data-toggle="buttons">
                    <label class="btn btn-primary active">
                        <input type="radio" name="childrens" />0</label>
                    <label class="btn btn-primary">
                        <input type="radio" name="childrens" />1</label>
                    <label class="btn btn-primary">
                        <input type="radio" name="childrens" />2</label>
                    <label class="btn btn-primary">
                        <input type="radio" name="childrens" />3</label>
                    <label class="btn btn-primary">
                        <input type="radio" name="childrens" />3+</label>
                </div>
                <select class="form-control hidden" id="childrens-plus" name="childrens-plus">
                    <option>0</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option selected="selected">4</option>
                    <option>5</option>
                    <option>6</option>
                    <option>7</option>
                </select>
            </div>
        </div>
        <!--se abre si hay menores-->
        <div class="col-md-12 MenoresNum mb10 hidden">
            <div class="form-group form-group-sm form-group-select-plus">
                <label for="field-hotel-adult">Edad de los menores al finalizar el viaje</label>
            </div>

            <!--depende del numero de menores-->
            <div class="col-md-3 field-menor-1">
