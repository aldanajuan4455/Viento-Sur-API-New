                                        <div style="width: 48%; display: inline-block;text-align: left;">
                                            <strong style="font-size: 9px;">{{ 'hotels.taxes_and_rates' | trans }}</strong>
                                        </div>
                                        <div style="width: 48%; display: inline-block;text-align: right;">
                                            <p style="margin: 0; padding: 0;"> {{ symbol }} {{ taxes + fee }}</p>
                                        </div>
